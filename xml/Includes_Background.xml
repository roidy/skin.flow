<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="Background">
        <param name="fadetime" default="600" />
        <definition>
            <control type="image">
                <top>-54000</top>
                <left>0</left>
                <width>192000</width>
                <height>108000</height>
                <fadetime>$PARAM[fadetime]</fadetime>
                <aspectratio>scale</aspectratio>
                <texture colordiffuse="ff404040">$VAR[Fanart]</texture>
            </control>
            <control type="image">
                <animation effect="fade" start="100" end="25" time="200" condition="Window.IsActive(DialogVideoInfo.xml)">Conditional</animation>
                <top>0</top>
                <left>250</left>
                <width>1920</width>
                <height>1080</height>
                <fadetime>600</fadetime>
                <aspectratio>scale</aspectratio>
                <texture colordiffuse="ffb0b0b0" diffuse="masks/FanartMask.png">$VAR[Fanart]</texture>
            </control>
        </definition>
    </include>

    <include name="Foreground">
        <param name="fadetime" default="600" />
        <definition>
            <control type="image">
                <top>0</top>
                <left>250</left>
                <width>1920</width>
                <height>1080</height>
                <fadetime>$PARAM[fadetime]</fadetime>
                <aspectratio>scale</aspectratio>
                <texture colordiffuse="ffb0b0b0" diffuse="masks/ListMask.png">$VAR[Fanart]</texture>
            </control>
        </definition>
    </include>
</includes>