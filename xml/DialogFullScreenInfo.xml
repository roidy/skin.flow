<window>
    <controls>

        <control type="group">
            <animation effect="slide" start="0,180" end="0,0" time="200">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,180" time="200">WindowClose</animation>

            <top>900</top>
            <height>180</height>

            <control type="image">
                <texture colordiffuse="e0080808">general/White.png</texture>
            </control>

            <include>Seekbar</include>

        </control>

        <control type="group">
            <animation effect="slide" start="0,-240" end="0,0" time="200">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,-240" time="200">WindowClose</animation>

            <left>0</left>
            <right>0</right>
            <top>0</top>
            <height>240</height>

            <control type="image">
                <texture colordiffuse="e0080808">general/White.png</texture>
            </control>

            <control type="group">
                <left>120</left>
                <top>40</top>
                <bottom>44</bottom>
                <right>120</right>

                <control type="label">
                    <height>64</height>
                    <textcolor>Bright</textcolor>
                    <font>Font48</font>
                    <label>$INFO[VideoPlayer.Title]</label>
                </control>
                <control type="textbox">
                    <top>64</top>
                    <textcolor>Grey</textcolor>
                    <font>Font30</font>
                    <label>$INFO[VideoPlayer.Plot][CR]LINEgggggg</label>
                </control>
            </control>
        </control>

      
    </controls>
