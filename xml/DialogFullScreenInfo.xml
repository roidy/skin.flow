            <control type="group">
                <left>846</left>
                <top>60</top>
                <bottom>60</bottom>
                <right>40</right>

                <control type="label">
                    <height>64</height>
                    <textcolor>Grey</textcolor>
                    <font>MenuItem</font>
                    <label>$INFO[VideoPlayer.Title]</label>
                </control>
                <control type="textbox">
                    <top>82</top>
                    <width>2540</width>
                    <textcolor>Grey</textcolor>
                    <font>WidgetLabelSub</font>
                    <label>$INFO[VideoPlayer.Plot]</label>
                </control>
                <control type="label">
                    <bottom>0</bottom>
                    <height>32</height>
                    <font>WidgetLabelSub</font>
