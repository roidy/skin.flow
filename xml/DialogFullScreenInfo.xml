<window>
    <controls>
        <control type="group">
            <animation effect="slide" start="0,588" end="0,0" time="200">WindowOpen</animation>
            <animation effect="slide" start="0,588" end="0,0" time="200">VisibleChange</animation>
            <animation effect="slide" start="0,0" end="0,588" time="200">WindowClose</animation>

            <left>200</left>
            <right>200</right>
            <bottom>100</bottom>
            <height>488</height>

            <control type="image">
                <texture background="true" border="32" colordiffuse="f4101010">masks/Mask488x488r32.png</texture>
            </control>
            <control type="image">
                <left>40</left>
                <top>40</top>
                <bottom>40</bottom>
